                this.setCustomValidity('Код країни недійсний.');
                this.title = 'Код країни недійсний.';
            } else {
                this.setCustomValidity('');
                this.title = 'Введіть дві маленькі латинські літери';
            }
        } else {
            this.setCustomValidity('');
            this.title = 'Введіть дві маленькі латинські літери';
        }
    });
</script>