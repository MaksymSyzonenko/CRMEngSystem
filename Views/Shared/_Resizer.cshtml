@using CRMEngSystem.Models.ViewModels.Resizer
@model ResizerViewModel

<head>
    <style>
        .resizer {
            cursor: col-resize;
        }

        .resizer svg {
            margin-left: 3px;
            height: 15px;
            width: 10px;
        }

        .resizer svg path {
            stroke: #4962E9;
            stroke-width: 3;
            stroke-linecap: round;
            stroke-linejoin: round;
        }

        .resizer a{
            color: #4962E9;
        }
    </style>
</head>
<body>
    <span class="resizer">
        @Model.TitleName
        @if (!string.IsNullOrEmpty(Model.SortActionName) && !string.IsNullOrEmpty(Model.SortControllerName))
        {
            @Html.ActionLink("↓", Model.SortActionName, Model.SortControllerName, Model.SortRouteValues)
        }
